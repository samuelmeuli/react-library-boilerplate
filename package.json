		"lint": "eslint ."
	},
	"dependencies": {
		"prop-types": "^15.6.2"
	},
	"peerDependencies": {
		"react": "^16.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"@babel/preset-react": "^7.0.0",
		"@storybook/react": "^4.0.0-rc.6",
		"autoprefixer": "^9.1.3",
		"babel-loader": "^8.0.4",
		"eslint": "^5.5.0",
		"eslint-config-airbnb": "17.1.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.1",
		"eslint-plugin-react": "^7.11.1",
		"husky": "^1.0.0",
		"node-sass": "^4.9.3",
		"npm-run-all": "^4.1.3",
		"postcss": "^7.0.2",
		"react": "^16.4.2",
		"react-dom": "^16.4.2",
		"rollup": "^0.66.2",
		"rollup-plugin-babel": "^4.0.2",
		"rollup-plugin-postcss": "^1.6.2"
	},
	"files": [
		"lib/"
	],
